<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/itemListImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical1"
            app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal1"
            app:srcCompat="@drawable/borsch" />

        <TextView
            android:id="@+id/itemListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/textview"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical1"
            app:layout_constraintTop_toBottomOf="@+id/itemListImage" />

        <TextView
            android:id="@+id/itemListDescrOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/textview"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical1"
            app:layout_constraintTop_toBottomOf="@+id/itemListTitle" />


        <Button
            android:id="@+id/itemListButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#3A3A3A"
            android:text="@string/lern_more"
            app:layout_constraintEnd_toStartOf="@+id/buttonListIngredient"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemListDescrOne"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonListIngredient"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#3A3A3A"
            android:text="@string/ingredient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemListButton"
            app:layout_constraintTop_toBottomOf="@+id/itemListDescrOne"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/itemListButtonDelete"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#CC0202"
            android:text="@string/delete_recipe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
            app:layout_constraintStart_toStartOf="@+id/guidelineVertical1"
            app:layout_constraintTop_toBottomOf="@+id/itemListButton" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="-5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>